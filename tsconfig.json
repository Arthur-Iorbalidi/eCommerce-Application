{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    //Ругня на any
    "noImplicitAny": true,
    //Use strict в каждый файл
    "alwaysStrict": true,
    //Ругня на undefined и null (если явно не указано)
    "strictNullChecks": true
  },

  "include": ["src", "./tests/*"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],

  "outDir": "./dist/",
  "rootDir": "./src/"
}
